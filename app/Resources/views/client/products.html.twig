{% extends "base.html.twig" %}
{% block title %}Home{% endblock %}
{% block stylesheets %}
    <style>
        h1{
            font-family: 'Pacifico', cursive;
            text-align: center;
        }
        p{
            font-family: 'Bree Serif', serif;
            font-size: 24px;
        }
        hr{
            width: 50%;
        }
    </style>
{% endblock %}
{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Accueil</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/cat">Voir le catalogue</a>
                </li>
            </ul>
            <a class="nav-link" href="/cart" style="color: white;"><i class="fas fa-shopping-cart"></i>&nbsp;Voir son panier</a>
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Login</button>
        </div>
    </nav>
    <br>
    <div class="container-fluid">
        <h1>Liste des produits</h1>
        <br>
        {% for prod in listProd %}
            <div class="row justify-content-center">
                <div class='col-1'>
                    <img class="card-img-top" src="{{ asset(prod.picture) }}" style='width: 100px; height: 100px;'>
                </div>
                <div class='col-2'>
                    <br><br>
                    {{prod.designation}}
                </div>
                <div class='col-1'>
                    <br><br>
                    {{prod.price}} â‚¬
                </div>
                <div class='col-1'>
                    <br><br>
                    <div class="row justify-content-center">
                        <form method="post">
                            <div class="input-group">
                                <input type="hidden" name="idProd" value="{{prod.id}}">
                                <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" aria-describedby="btnAddCart" required>
                                <div class="input-group-prepend">
                                    <button type="submit" id="btnAddCart" class="btn btn-light input-group-text">
                                        <i class="fas fa-cart-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
                <hr>
        {% endfor %}
    </div>
{% endblock %}
